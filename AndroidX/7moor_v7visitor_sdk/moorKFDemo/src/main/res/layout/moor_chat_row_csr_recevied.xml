<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_csr"
            android:layout_centerHorizontal="true"
            android:background="@drawable/moor_bg_transant_csr_bg"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_csrtitle"
                android:textSize="12sp"
                android:textColor="@color/moor_color_ffffff"
                android:text="@string/moor_csr_chatrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_csrtitle"
                android:id="@+id/tv_show_csr"
                android:textSize="12sp"
                android:textColor="@color/moor_color_0081ff"
                android:text="@string/moor_chat_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>