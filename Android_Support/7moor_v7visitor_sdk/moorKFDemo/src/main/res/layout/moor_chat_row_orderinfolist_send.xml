<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_ordercard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/moor_bg_in_msg"
    android:padding="14dp">

    <TextView
        android:id="@+id/tv_order_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="这是订单卡片"
        android:textColor="@color/moor_color_151515"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_num_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textColor="@color/moor_color_999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="112"
            android:textColor="@color/moor_color_999999"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="14dp"
        android:background="@color/moor_color_ededed"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <com.moor.imkf.demo.view.shadowlayout.MoorShadowLayout
            android:layout_marginRight="10dp"
            android:id="@+id/sl_order_btn_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:moor_cornerRadius="50dp"
            app:moor_layoutBackground="@color/moor_color_ffffff"
            app:moor_layoutBackground_true="@color/moor_color_e4e4e4"
            app:moor_shapeMode="pressed"
            app:moor_strokeColor="@color/moor_color_dddddd"
            app:moor_strokeWith="0.5dp">

            <TextView
                android:id="@+id/tv_order_btn_l"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="L"
                android:textColor="@color/moor_color_666666"
                android:textSize="13sp" />
        </com.moor.imkf.demo.view.shadowlayout.MoorShadowLayout>


        <com.moor.imkf.demo.view.shadowlayout.MoorShadowLayout

            android:id="@+id/sl_order_btn_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:moor_cornerRadius="50dp"
            app:moor_layoutBackground="@color/moor_color_ffffff"
            app:moor_layoutBackground_true="@color/moor_color_e4e4e4"
            app:moor_shapeMode="pressed"
            app:moor_strokeColor="@color/moor_color_0081ff"
            app:moor_strokeWith="0.5dp">

            <TextView
                android:id="@+id/tv_order_btn_r"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="R"
                android:textColor="@color/moor_color_0081ff"
                android:textSize="13sp" />
        </com.moor.imkf.demo.view.shadowlayout.MoorShadowLayout>
    </LinearLayout>

</LinearLayout>