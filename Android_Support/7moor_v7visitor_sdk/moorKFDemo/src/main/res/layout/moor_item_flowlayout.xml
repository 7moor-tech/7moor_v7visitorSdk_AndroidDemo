<?xml version="1.0" encoding="utf-8"?>
<com.moor.imkf.demo.view.shadowlayout.MoorShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_tag"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:moor_cornerRadius="17.5dp"
    app:moor_layoutBackground="@color/moor_color_f8f8f8"
    app:moor_layoutBackground_true="@color/moor_color_ecf6ff"
    app:moor_bindTextView="@+id/tv_title"
    app:moor_textColor="@color/moor_color_151515"
    app:moor_textColor_true="@color/moor_color_0081ff"
    app:moor_shapeMode="selected">

    <com.moor.imkf.demo.view.MoorAlignTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="50"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp"
        android:textSize="13sp"
        tools:text="xxssssssssssssssssxx">
    </com.moor.imkf.demo.view.MoorAlignTextView>
</com.moor.imkf.demo.view.shadowlayout.MoorShadowLayout>

