<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moor_selector_add_button"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_panel_pic"
        android:layout_width="@dimen/moor_chat_panel_icon_size"
        android:layout_height="@dimen/moor_chat_panel_icon_size"
        android:src="@drawable/moor_icon_chat_pic" />

    <TextView
        android:id="@+id/tv_panel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:text="@string/moor_chat_img"
        android:textColor="@color/moor_color_6d6d6d"
        android:textSize="12sp" />

</LinearLayout>
